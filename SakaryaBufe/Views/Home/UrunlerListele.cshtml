@{
    ViewBag.Title = "UrunlerListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<SakaryaBufe.Models.Urunler>

<div class="gallery">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">@Model.First().Kategori1.kategoriAd<span> Kategorisindeki Ürünler </span></h3>

        </div>
        <div class="gallery-info">
            @foreach (var urunler in Model)
            {

                <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                    <a href="/tr/Home/UrunDetay/@urunler.id"><img src="~/Content/images/@urunler.ResimYol" class="img-responsive" alt="" width="100" height="100"/></a>

                    <div class="gallery-text simpleCart_shelfItem">
                        <h5><a class="name" href="single.html">@urunler.Baslik </a></h5>
                        <p>@urunler.Aciklama</p>
                        <p>@urunler.Fiyat</p>
                        <div class="btn_form">
                            @Html.ActionLink("Satın Al","SatinAl","Home",new { lang = "tr" , id=urunler.id},htmlAttributes:new { @class= "add-cart item_add" })
                        </div>
                    </div>
                </div>

            }

            <div class="clearfix"></div>
        </div>
    </div>
</div>


